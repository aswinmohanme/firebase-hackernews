{
  "name": "firebase-hackernews",
  "version": "0.12.0",
  "description": "Hacker News APIs with firebase",
  "license": "MIT",
  "repository": "ragingwind/firebase-hackernews",
  "author": {
    "name": "ragingwind",
    "email": "ragingwind@gmail.com",
    "url": "ragingwind.me"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "xo ./src/*.js && ava test.js",
    "build:hn": "babel ./src/hn-firebase.js -o ./hn-firebase.js --presets=es2015",
    "build:es": "mkdir -p es && babel ./src/es/index.js -o ./es/index.js --presets=es2015",
    "build": "babel ./src/index.js -o ./index.js --presets=es2015",
    "prepublishOnly": "npm run build:hn && npm run build:es && npm run build"
  },
  "files": [
    "index.js",
    "es/indexjs"
  ],
  "keywords": [
    "firebase",
    "hacker",
    "news",
    "hackernews",
    "hnpwa"
  ],
  "dependencies": {
    "firebase": "^4.1.1",
    "isomorphic-unfetch": "^1.0.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "express": "^4.15.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "xo": "^0.17.0"
  },
  "xo": {
    "semicolon": false,
    "globals": [
      "window",
      "performance"
    ]
  }
}
